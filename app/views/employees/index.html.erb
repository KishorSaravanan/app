<head>
	<%= stylesheet_link_tag 'styles' %>
</head>
<body>
	<center>
	<h1>Employees Table</h1><br><br>

<table>
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>PhoneNumber</th>
			<th>DOB</th>
			<th colspan="3">Action</th>
		</tr>
	</thead>
	<tbody>
		<% @employees.each do |employee|%>
		<tr>
			<td><%= employee.id %></td>
			<td><%= employee.name %></td>
			<td><%= employee.phone_number %></td>
			<td><%= employee.date_of_birth %></td>
			<td><%= link_to 'View' ,employee%></td>
			<td><%= link_to 'Edit' ,edit_employee_path(employee)%></td>
			<td><%= link_to 'Delete' ,employee, method: :delete, data: {confirm:'Are You Sure to Delete?'}%></td>
		</tr>
		<%end%>
	</tbody>
</table><br><br>

	<b><%= link_to 'AddNewEmployee',new_employee_path %></b>

<br><br>
 
<%=paginate @employees %>
</center>

</body>